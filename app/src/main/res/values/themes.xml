<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SlotsApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/casino_red</item>
        <item name="colorPrimaryVariant">@color/casino_green</item>
        <item name="colorOnPrimary">@color/casino_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/flag</item>
        <item name="colorSecondaryVariant">@color/flag_2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>


    </style>

    <style name="PreferencesTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorAccent">@color/casino_red</item>
        <item name="android:textSize">20dp</item>
        <item name="colorPrimary">@color/casino_red</item>
        <item name="android:windowBackground">@color/casino_green</item>
        <item name="android:statusBarColor">@color/casino_green</item>

    </style>

</resources>